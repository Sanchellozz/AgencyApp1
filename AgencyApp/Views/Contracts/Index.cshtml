@model IEnumerable<AgencyApp.Models.Contract>

@{
    ViewData["Title"] = "Index";
}

<h1>Договоры</h1>

<p>
    <a asp-action="Create">Создать</a>
</p>
@using (Html.BeginForm())
{
    <tr>
    <td>
        @Html.TextBox("SearchString")  
        <input type="submit" value="Поиск" />
    </td>
    </tr>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Номер", "Index", new { sortOrder = ViewBag.IdSortParm })
            </th>
            <th>
                @Html.ActionLink("Дата заключения", "Index", new { sortOrder = ViewBag.DateSortParm })
            </th>
            <th>
                @Html.ActionLink("Пакет страхования", "Index", new { sortOrder = ViewBag.DicSortParm })
            </th>
            <th>
                 @Html.ActionLink("Имя клиента", "Index", new { sortOrder = ViewBag.ClientNameSortParm })
            </th>
            <th>
                @Html.ActionLink("Имя агента", "Index", new { sortOrder = ViewBag.AgentNameSortParm })
            </th>
            <th>
                @Html.ActionLink("Цена", "Index", new { sortOrder = ViewBag.PriceSortParm })
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ContractId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dictionary.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Agent.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dictionary.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ContractId">Изменить</a> |
                <a asp-action="Delete" asp-route-id="@item.ContractId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
